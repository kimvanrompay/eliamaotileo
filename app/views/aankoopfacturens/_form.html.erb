  </div>

  <div class="my-5">
    <%= form.label :betaald %>
    <%= form.check_box :betaald, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :bevestigd %>
    <%= form.check_box :bevestigd, class: "block mt-2 h-5 w-5" %>
  </div>

