    <%= form.label :recurrent %>
    <%= form.check_box :recurrent, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :opmerking %>
    <%= form.text_area :opmerking, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :staving %>
    <%= form.text_area :staving, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
