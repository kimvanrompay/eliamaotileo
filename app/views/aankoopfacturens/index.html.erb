<div class="container mx-auto py-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
</div>

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-4xl font-semibold text-gray-900">Aankoopfacturen</h1>
      <p class="mt-2 text-sm text-gray-700">Alle binnenkomende facturen.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to 'Nieuw aankoopfacturen', new_aankoopfacturen_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
  </div>
  <div id="aankoopfacturens" class="min-w-full">
<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
  </div>
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Bedrijfsnaam</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Bedrag (EUR)</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Vervaldatum</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Betaald</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Bevestigd</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="text-indigo-600 hover:text-indigo-900"></span>
                </th>
              </tr>
            </thead>
                    <%= render @aankoopfacturens %>
      </table>
    
  </div>
  
        <div class="sm:flex-auto mt-7">
      <h1 class="text-4xl font-semibold text-gray-900">Terug te vorderen btw: <%= (@aankoopfacturens.sum(:excl_bedrag))*0.21 %> EUR</h1>
      <p class="mt-2 text-sm text-gray-700"></p>
    </div>
    
    
</div>
