<div id="<%= dom_id contact %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Bedrijfsnaam:</strong>
    <%= contact.bedrijfsnaam %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Contactnaam:</strong>
    <%= contact.contactnaam %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= contact.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tel:</strong>
    <%= contact.tel %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Onderwerp:</strong>
    <%= contact.onderwerp %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this contact", contact, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this contact', edit_contact_path(contact), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
